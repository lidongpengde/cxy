<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <!-- 如果是用mvn命令生成的xml，需要修改servlet版本为3.1 -->
    <welcome-file-list>
        <welcome-file>/main.html</welcome-file>
    </welcome-file-list>
    <!-- 配置DispatcherServlet -->
  <servlet>
    <servlet-name>DispatcherServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <!-- 配置springMVC需要加载的配置文件
        spring-dao.xml,spring-service.xml,spring-web.xml
        Mybatis - > spring -> springmvc
     -->
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:spring*.xml</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>DispatcherServlet</servlet-name>
    <!-- 默认匹配所有的请求 -->
    <url-pattern>/</url-pattern>
  </servlet-mapping>
    <filter>
        <filter-name>Login</filter-name>
        <filter-class>com.cxy.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Login</filter-name>
        <!--这里的/admin/* 表示是指定路径下的文件需要过滤   也可以写为 <url-pattern>/*</url-pattern> 表示所有文件都需要过滤-->
        <url-pattern>/v1/*</url-pattern>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>cors</filter-name>
        <filter-class>com.cxy.filter.HeadersCORSFilter</filter-class><!--你过滤器的包 -->
    </filter>
    <filter-mapping>
        <filter-name>cors</filter-name>
        <url-pattern>/*</url-pattern><!-- 你开放的接口前缀  -->
    </filter-mapping>


    <filter>
        <filter-name>encode</filter-name>
        <filter-class>com.cxy.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encode</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encode</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--过滤XSS注入 -->
    <filter>
        <filter-name>XssEscape</filter-name>
        <filter-class>com.cxy.filter.XssFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>XssEscape</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
<!--    &lt;!&ndash;过滤SQL注入 &ndash;&gt;
    <filter>
        <filter-name>SqlFilter</filter-name>
        <filter-class>com.cxy.filter.SqlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SqlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>-->
</web-app>
